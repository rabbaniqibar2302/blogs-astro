---
import {Image} from 'astro:assets';
import {slugify,formatDate} from "../js/utlis";
const {title, date, category, author, image} = Astro.props;
---

<header>
    <div class="container">
        <small>
            <a href={`/category/${slugify(category)}`} class="badge">
                {category}
            </a>
        </small>
        <h1 class="h2">{title}</h1>
        <p>by <a href={`/author/${slugify(author)}`}>{author}</a> â€¢ {formatDate(date)}</p>
    </div>
    <Image 
    src={image.src}
    alt={image.alt}
    width="1200"
    height="600"
    format="avif"
    fit="cover"
    quality={80}
    class="hero-image"
    />
</header>